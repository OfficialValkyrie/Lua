--[[
Tested in:
Luau (Roblox)
Lua 5.2
Lua 5.3
Lua 5.4

Only the Current Checks will work.
Roblox Environment stuff will come later.
--]]

function CheckType(a)
	return (a == nil and "nil") or string.match(tostring(a), "^(.-):") or ((a == true or a == false) and "boolean") or ((tonumber(a) == nil and tostring(a) ~= nil) and "string") or (tonumber(a) ~= nil and tostring(a) ~= nil and "number") or "Unknown"
end

function Function() end 
local Table = {}
local Thread = coroutine.create(Function)
local Userdata = newproxy and newproxy(true) -- Roblox Only
local Boolean = true
local Number = 1
local String = "Hello World!"


print(CheckType(Function)) -- Output: function

print(CheckType(Table)) -- Output: table

print(CheckType(Thread)) -- Output: thread

print(CheckType(Userdata)) -- Output: userdata {Roblox Only}

print(CheckType(Boolean)) -- Output: boolean

print(CheckType(Number)) -- Output: number

print(CheckType(String)) -- Output: string
